<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{% block title %}{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous" defer></script>
</head>
<body>
    <div class="container">
        {% if siteMessage.type.value == 'error' %}
            <div class="alert alert-danger text-danger text-bold fw-medium mt-2">{{ siteMessage.text }}</div>
        {% elseif siteMessage.type.value == 'success' %}
            <div class="alert alert-success text-success text-bold fw-medium mt-2">{{ siteMessage.text }}</div>
        {% elseif siteMessage.type.value == 'warning' %}
            <div class="alert alert-warning text-warning text-bold fw-medium mt-2">{{ siteMessage.text }}</div>
        {% elseif siteMessage.type.value == 'info' %}
            <div class="alert alert-info text-info text-bold fw-medium mt-2">{{ siteMessage.text }}</div>
        {% elseif siteMessage.type.value == 'notice' %}
            <div class="alert alert-primary text-primary text-bold fw-medium mt-2">{{ siteMessage.text }}</div>
        {% endif %}
        {% block body %}
        {% endblock %}
    </div>
</body>
</html>